<h3>Cadastro de Restaurantes</h3>
<hr />
<div ng-controller="RestauranteCtrl">

    <div class="navbar-form navbar-left">
        <div class="form-group">
            <input type="text" class="form-control" ng-model="restaurante.Nome" placeholder="pesquisa">
        </div>
        <button type="button" class="btn btn-primary" ng-click="pesquisar()">Pesquisar</button>
        <button type="button" class="btn btn-primary" onclick="location.href = '/Restaurantes/Create/';">Cadastrar novo restaurante</button>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th> </th>
                    <th align="center"> Restaurante </th>
                </tr>
                <tr ng-repeat="item in restaurantes">
                    <td width="15%" data-title="'A&ccedil;&otilde;es'"
                        class="configuracaoGrid width-acoes-grid">
                        <div class="hidden-sm hidden-xs btn-group width-acoes-grid">

                            <span ng-click="EditarRestaurante(item)" class="btn btn-xs btn-info">Edit</span>
                            <span ng-click="DeletaRestaurante(item)" class="btn btn-xs btn-dange">Delete</span>

                        </div>
                    </td>
                    <td width="85%" class="text-left"> {{item.Nome }} </td>
                </tr>
            </table>
        </div>

    </div>


